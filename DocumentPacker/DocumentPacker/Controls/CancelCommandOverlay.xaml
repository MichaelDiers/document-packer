<UserControl x:Class="DocumentPacker.Controls.CancelCommandOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mvvm="clr-namespace:DocumentPacker.Mvvm">
    <UserControl.Resources>
        <ResourceDictionary Source="../Styles/CancelCommandOverlayStyle.xaml" />
    </UserControl.Resources>
    <Grid>
        <Button Command="{Binding Path=(mvvm:TaskCommand.CancelCommand)}">
            Cancel
        </Button>
    </Grid>
</UserControl>