<mvvm:BaseUserControl x:Class="DocumentPacker.Parts.Header.HeaderPart.HeaderView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mvvm="clr-namespace:DocumentPacker.Mvvm"
                 Style="{StaticResource HeaderViewStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="1"
            Style="{StaticResource HeaderTextBlockStyle}"
            Text="{Binding Headline}"/>

        <ContentControl
            Grid.Column="2"
            Content="{Binding NavigationBar}"/>
        
    </Grid>
</mvvm:BaseUserControl>
