<mvvm:BaseUserControl
    x:Class="DocumentPacker.Parts.Main.FeaturesPart.FeaturesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mvvm="clr-namespace:DocumentPacker.Mvvm"
    xmlns:featuresPart="clr-namespace:DocumentPacker.Parts.Main.FeaturesPart"
    x:Name="Self"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=featuresPart:FeaturesViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Style="{StaticResource HeadlineTextBlockPrimaryStyle}"
            Text="{x:Static featuresPart:FeaturesPartTranslation.Headline}" />

        <ItemsControl
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Center"
            ItemsSource="{Binding FeatureElements}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel
                        IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button
                        Command="{Binding ElementName=Self,Path=  DataContext.RequestFeatureCommand}"
                        CommandParameter="{Binding}"
                        VerticalContentAlignment="Stretch">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="200" />
                                <ColumnDefinition
                                    Width="200" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Text="{Binding Headline}"
                                Style="{StaticResource HeadlineTextBlockSecondaryStyle}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                VerticalAlignment="Stretch"
                                Text="{Binding Description}"
                                TextWrapping="Wrap" />
                            <Image
                                Grid.Row="1"
                                Grid.Column="0"
                                Source="{Binding IconPath}" />
                        </Grid>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</mvvm:BaseUserControl>
