<UserControl x:Class="DocumentPacker.Parts.EncryptStartUpPart.View.EncryptStartUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:contracts="clr-namespace:DocumentPacker.Parts.EncryptStartUpPart.Contracts"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=contracts:IEncryptStartUpViewModel, IsDesignTimeCreatable=False}">
    <ItemsControl ItemsSource="{Binding Links, Mode=OneTime}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Button 
                    Command="{Binding FollowLinkCommand, Mode=OneTime}"
                    Margin="5"
                    Padding="5">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Description}" />
                    </StackPanel>
                </Button>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
