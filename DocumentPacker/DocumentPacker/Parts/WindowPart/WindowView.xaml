<Window
    x:Class="DocumentPacker.Parts.WindowPart.WindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:windowPart="clr-namespace:DocumentPacker.Parts.WindowPart"
    Icon="/Assets/icon.png"
    Style="{StaticResource WindowStyle}"
    Title="{Binding Title.LabelTranslation}"
    IsEnabled="{Binding IsWindowEnabled}"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=windowPart:WindowViewModel, IsDesignTimeCreatable=False}">
    <ScrollViewer
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto">
        <Grid
            MaxWidth="1200"
            VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Row="0"
                Grid.Column="0">
                <Border.Style>
                    <Style
                        TargetType="Border">
                        <Setter
                            Property="HorizontalAlignment"
                            Value="Stretch" />
                        <Setter
                            Property="VerticalAlignment"
                            Value="Stretch" />
                        <Setter
                            Property="Panel.ZIndex"
                            Value="1000" />
                        <Setter
                            Property="Background"
                            Value="#80000000" />
                        <Setter
                            Property="BorderBrush"
                            Value="Black" />
                        <Setter
                            Property="BorderThickness"
                            Value="1" />
                        <Style.Triggers>
                            <DataTrigger
                                Binding="{Binding IsCommandActive}"
                                Value="False">
                                <Setter
                                    Property="Visibility"
                                    Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            <ContentControl
                Grid.Row="0"
                Grid.Column="0"
                Content="{Binding View}" />
        </Grid>
    </ScrollViewer>
</Window>
