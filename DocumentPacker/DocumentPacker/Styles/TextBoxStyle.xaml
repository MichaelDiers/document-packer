<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="pack://application:,,,/Libs.Wpf;component/Styles/common/TextBoxStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style
        TargetType="TextBox"
        BasedOn="{StaticResource TranslatableMultiLineTextBoxStyle}"
        x:Key="DocumentPackerTranslatableMultiLineTextBoxStyle">
        <Setter
            Property="Margin"
            Value="24" />
    </Style>

    <Style
        TargetType="TextBox"
        BasedOn="{StaticResource TranslatableTextBoxStyle}">
        <Setter
            Property="Margin"
            Value="24" />
    </Style>

</ResourceDictionary>
