<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:DocumentPacker.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="OverlayStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style
        TargetType="{x:Type views:CancelCommandOverlay}"
        BasedOn="{StaticResource OverlayStyle}" />
    <Style
        TargetType="Button">
        <Style.Setters>
            <Setter
                Property="Height"
                Value="100" />
            <Setter
                Property="Width"
                Value="200" />
            <Setter
                Property="HorizontalAlignment"
                Value="Center" />
            <Setter
                Property="VerticalAlignment"
                Value="Center" />
        </Style.Setters>
    </Style>
</ResourceDictionary>
