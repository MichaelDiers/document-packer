<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mvvm="clr-namespace:DocumentPacker.Mvvm">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="pack://application:,,,/Libs.Wpf;component/Styles/DefaultKeyedStyles.xaml" />
        <ResourceDictionary
            Source="pack://application:,,,/Libs.Wpf;component/Styles/DefaultStyles.xaml" />
        <ResourceDictionary
            Source="pack://application:,,,/Libs.Wpf;component/Styles/CommandButtonStyle.xaml" />
        <!--
        <ResourceDictionary
            Source="Basic.xaml" />
        <ResourceDictionary
            Source="WindowStyle.xaml" />
        <ResourceDictionary
            Source="SmallCommandButton.xaml" />
        
        -->
    </ResourceDictionary.MergedDictionaries>
    <Style
        TargetType="Button"
        BasedOn="{StaticResource CommandButtonStyle}">
        <Setter
            Property="MaxHeight"
            Value="56" />
    </Style>

    <Style
        TargetType="TextBlock"
        x:Key="TextBlockBaseHeadlineStyle"
        BasedOn="{StaticResource DefaultTextBlockStyle}">
        <Setter
            Property="FontWeight"
            Value="Bold" />
        <Setter
            Property="HorizontalAlignment"
            Value="Center" />
        <Setter
            Property="TextWrapping"
            Value="Wrap" />
    </Style>

    <Style
        TargetType="TextBlock"
        x:Key="HeaderTextBlockStyle"
        BasedOn="{StaticResource TextBlockBaseHeadlineStyle}">
        <Setter
            Property="FontSize"
            Value="48" />
        <Setter
            Property="Margin"
            Value="32" />
    </Style>

    <!-- primary headline TextBlock -->
    <Style
        TargetType="TextBlock"
        x:Key="HeadlineTextBlockPrimaryStyle"
        BasedOn="{StaticResource TextBlockBaseHeadlineStyle}">
        <Setter
            Property="FontSize"
            Value="28" />
        <Setter
            Property="Margin"
            Value="48" />
    </Style>

    <!-- secondary headline TextBlock -->
    <Style
        TargetType="TextBlock"
        x:Key="HeadlineTextBlockSecondaryStyle"
        BasedOn="{StaticResource TextBlockBaseHeadlineStyle}">
        <Setter
            Property="FontSize"
            Value="24" />
    </Style>

    <Style
        x:Key="HeaderViewStyle"
        TargetType="mvvm:BaseUserControl">
        <Setter
            Property="Margin"
            Value="32" />
    </Style>
    <Thickness
        x:Key="DefaultMargin">
        8
    </Thickness>
    <Thickness
        x:Key="DefaultNoTopMargin">
        8,0,8,8
    </Thickness>
    <Thickness
        x:Key="DefaultNoBottomMargin">
        8,8,8,0
    </Thickness>
    <Thickness
        x:Key="DefaultPadding">
        8
    </Thickness>
    <Style
        TargetType="TextBox"
        BasedOn="{StaticResource DefaultTextBoxStyle}">
        <Setter
            Property="MaxHeight"
            Value="60" />
    </Style>
</ResourceDictionary>
