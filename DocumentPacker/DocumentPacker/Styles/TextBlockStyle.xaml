<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="pack://application:,,,/Libs.Wpf;component/Styles/common/TextBlockStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style
        TargetType="TextBlock"
        x:Key="TextBlockBaseHeadlineStyle"
        BasedOn="{StaticResource TranslatableTextBlockStyle}">
        <Setter
            Property="FontWeight"
            Value="Bold" />
        <Setter
            Property="HorizontalAlignment"
            Value="Center" />
        <Setter
            Property="TextWrapping"
            Value="Wrap" />
    </Style>

    <Style
        TargetType="TextBlock"
        x:Key="HeaderTextBlockStyle"
        BasedOn="{StaticResource TextBlockBaseHeadlineStyle}">
        <Setter
            Property="FontSize"
            Value="48" />
        <Setter
            Property="Margin"
            Value="32" />
    </Style>

    <Style
        TargetType="TextBlock"
        x:Key="HeadlineTextBlockPrimaryStyle"
        BasedOn="{StaticResource TextBlockBaseHeadlineStyle}">
        <Setter
            Property="FontSize"
            Value="28" />
        <Setter
            Property="Margin"
            Value="48" />
    </Style>

</ResourceDictionary>
