<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:mvvm="clr-namespace:DocumentPacker.Mvvm">
    <!-- defaults -->
    <FontFamily
        x:Key="DefaultFontFamily">
        Segoe UI Variable
    </FontFamily>
    <system:Double
        x:Key="DefaultFontSize">
        18
    </system:Double>
    <FontWeight
        x:Key="DefaultFontWeight">
        Normal
    </FontWeight>
    <Thickness
        x:Key="DefaultMargin">
        8
    </Thickness>
    <Thickness
        x:Key="DefaultNoTopMargin">
        8,0,8,8
    </Thickness>
    <Thickness
        x:Key="DefaultNoBottomMargin">
        8,8,8,0
    </Thickness>
    <Thickness
        x:Key="DefaultPadding">
        8
    </Thickness>
    <system:Boolean
        x:Key="True">
        True
    </system:Boolean>
    <system:Boolean
        x:Key="False">
        False
    </system:Boolean>

    <!-- TextBlock base -->
    <Style
        TargetType="TextBlock"
        x:Key="TextBlockBaseStyle">
        <Setter
            Property="FontFamily"
            Value="{StaticResource DefaultFontFamily}" />
        <Setter
            Property="FontSize"
            Value="{StaticResource DefaultFontSize}" />
        <Setter
            Property="FontWeight"
            Value="{StaticResource DefaultFontWeight}" />
        <Setter
            Property="Margin"
            Value="{StaticResource DefaultMargin}" />
        <Setter
            Property="Padding"
            Value="{StaticResource DefaultPadding}" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
    </Style>

    <!-- TextBlock base headline -->
    <Style
        TargetType="TextBlock"
        x:Key="TextBlockBaseHeadlineStyle"
        BasedOn="{StaticResource TextBlockBaseStyle}">
        <Setter
            Property="FontWeight"
            Value="Bold" />
        <Setter
            Property="HorizontalAlignment"
            Value="Center" />
    </Style>

    <!-- default TextBlock -->
    <Style
        TargetType="TextBlock"
        BasedOn="{StaticResource TextBlockBaseStyle}" />

    <!-- header TextBlock -->
    <Style
        TargetType="TextBlock"
        x:Key="HeaderTextBlockStyle"
        BasedOn="{StaticResource TextBlockBaseHeadlineStyle}">
        <Setter
            Property="FontSize"
            Value="48" />
        <Setter
            Property="Margin"
            Value="32" />
    </Style>

    <!-- primary headline TextBlock -->
    <Style
        TargetType="TextBlock"
        x:Key="HeadlineTextBlockPrimaryStyle"
        BasedOn="{StaticResource TextBlockBaseHeadlineStyle}">
        <Setter
            Property="FontSize"
            Value="28" />
        <Setter
            Property="Margin"
            Value="48" />
    </Style>

    <!-- secondary headline TextBlock -->
    <Style
        TargetType="TextBlock"
        x:Key="HeadlineTextBlockSecondaryStyle"
        BasedOn="{StaticResource TextBlockBaseHeadlineStyle}">
        <Setter
            Property="FontSize"
            Value="24" />
    </Style>

    <Style
        x:Key="HeaderViewStyle"
        TargetType="mvvm:BaseUserControl">
        <Setter
            Property="Margin"
            Value="32" />
    </Style>

    <Style
        TargetType="Control"
        x:Key="ControlStyle">
        <Setter
            Property="FontFamily"
            Value="{StaticResource DefaultFontFamily}" />
        <Setter
            Property="FontSize"
            Value="{StaticResource DefaultFontSize}" />
        <Setter
            Property="FontWeight"
            Value="{StaticResource DefaultFontWeight}" />
    </Style>

    <Style
        TargetType="Button"
        x:Key="DefaultButtonStyle"
        BasedOn="{StaticResource ControlStyle}">
        <Setter
            Property="HorizontalAlignment"
            Value="Center" />
        <Setter
            Property="Margin"
            Value="{StaticResource DefaultMargin}" />
        <Setter
            Property="Padding"
            Value="{StaticResource DefaultPadding}" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
    </Style>
    <Style
        TargetType="Button"
        BasedOn="{StaticResource DefaultButtonStyle}" />

    <Style
        TargetType="Border">
        <Setter
            Property="CornerRadius"
            Value="8" />
        <Setter
            Property="Margin"
            Value="{StaticResource DefaultMargin}" />
        <Setter
            Property="Padding"
            Value="{StaticResource DefaultPadding}" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
    </Style>

    <Style
        TargetType="CheckBox"
        BasedOn="{StaticResource ControlStyle}">
        <Setter
            Property="Margin"
            Value="{StaticResource DefaultMargin}" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
    </Style>

    <Style
        TargetType="ComboBox"
        BasedOn="{StaticResource ControlStyle}">
        <Setter
            Property="HorizontalContentAlignment"
            Value="Center" />
        <Setter
            Property="Margin"
            Value="{StaticResource DefaultMargin}" />
        <Setter
            Property="VerticalAlignment"
            Value="Center" />
    </Style>

    <Style
        TargetType="Label"
        BasedOn="{StaticResource ControlStyle}">
        <Setter
            Property="Margin"
            Value="{StaticResource DefaultMargin}" />
    </Style>

    <Style
        TargetType="TextBox"
        x:Key="DefaultTextBoxStyle"
        BasedOn="{StaticResource ControlStyle}">
        <Setter
            Property="Margin"
            Value="{StaticResource DefaultMargin}" />
    </Style>

    <Style
        TargetType="TextBox"
        BasedOn="{StaticResource DefaultTextBoxStyle}" />
</ResourceDictionary>
