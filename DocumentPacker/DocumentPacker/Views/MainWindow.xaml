<Window x:Class="DocumentPacker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:DocumentPacker.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="{Binding Path=(viewModels:TaskCommand.IsExecutingCommands)}"/>
        <TextBlock Text="{Binding RunExecuted1}"/>
        <Button Command="{Binding RunCommand1}">RunCommand1</Button>
        <TextBlock Text="{Binding RunExecuted2}"/>
        <Button Command="{Binding RunCommand2}">RunCommand2</Button>
        <TextBlock Text="{Binding RunExecuted3}"/>
        <Button Command="{Binding RunCommand3}">RunCommand3</Button>
        <Button Command="{Binding RunCommand1.CancelCommand}">Cancel</Button>
    </StackPanel>
</Window>