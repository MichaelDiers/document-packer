<Window x:Class="DocumentPacker.Parts2.WindowPart.WindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DocumentPacker.Views"
        xmlns:viewModels="clr-namespace:DocumentPacker.Mvvm"
        xmlns:converters="clr-namespace:DocumentPacker.Converters"
        Icon="/Assets/icon.png"
        Style="{StaticResource WindowStyle}"
        Title="{Binding WindowTitle}">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <views:CancelCommandOverlay
            Grid.Row="0"
            Visibility="{Binding Path=(viewModels:TaskCommand.IsExecutingCommands), Converter={StaticResource BoolToVisibilityConverter}}" />
        <views:FatalErrorMessage
            Grid.Row="0"
            Visibility="{Binding Path=FatalErrorMessage, Converter={StaticResource NullToVisibilityConverter}}" />
        <ContentControl
            Grid.Row="0"
            Grid.Column="0"
            Content="{Binding View}"/>
    </Grid>
</Window>
