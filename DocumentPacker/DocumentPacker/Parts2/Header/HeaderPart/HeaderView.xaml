<mvvm:BaseUserControl x:Class="DocumentPacker.Parts2.Header.HeaderPart.HeaderView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mvvm="clr-namespace:DocumentPacker.Mvvm">
    <Grid Margin="8,8,8,64">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="1"
            Style="{StaticResource HeaderTextBlockStyle}"
            Text="{Binding Headline}"/>

        <ContentControl
            Grid.Column="2"
            Content="{Binding NavigationBar}"/>
        
    </Grid>
</mvvm:BaseUserControl>
