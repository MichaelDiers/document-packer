<mvvm:BaseUserControl x:Class="DocumentPacker.Parts2.LayoutPart.LayoutView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mvvm="clr-namespace:DocumentPacker.Mvvm">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ContentControl
            Grid.Row="0"
            Content="{Binding HeaderView}"/>
        <ContentControl
            Grid.Row="1"
            Content="{Binding MainView}"/>
        <ContentControl
            Grid.Row="2"
            Content="{Binding FooterView}"/>
    </Grid>
</mvvm:BaseUserControl>
